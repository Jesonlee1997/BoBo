<?xml version="1.0" encoding="UTF-8"?>
<BoBo>
    <view>
        <!--jsp文件存放的目录-->
        <location>/WEB-INF/pages</location>
    </view>
    <controller>
        <!--controller类所在的包-->
        <location>classpath:me.jesonlee.mymvc2.controller</location>
    </controller>
    <url-patterns>
        <!--url-方法映射，方法名可以是controller包中任意一个类的任意方法-->
        <url-pattern>
            <url>/jeson/(id)/(name)</url>
            <method>jeson</method>
        </url-pattern>
        <url-pattern>
            <url>/java</url>
            <method>java</method>
        </url-pattern>
    </url-patterns>
</BoBo>